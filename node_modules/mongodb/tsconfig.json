{
  "compilerOptions": {
    "target": "ES2021",                          // Specify ECMAScript target version
    "module": "commonjs",                        // Specify module code generation
    "strict": true,                              // Enable all strict type-checking options
    "esModuleInterop": true,                     // Emit __importStar and __importDefault helpers
    "skipLibCheck": true,                        // Skip type checking of all declaration files
    "forceConsistentCasingInFileNames": true,    // Disallow inconsistently-cased references to the same file
    "outDir": "./dist",                          // Redirect output structure to the dist directory
    "rootDir": "./src",                          // Specify the root directory of input files
    "resolveJsonModule": true,                   // Include modules imported with .json extension
    "typeRoots": ["./node_modules/@types"],      // List of folders to include type definitions from
    "lib": ["ES2021"],                           // Specify library files to be included in the compilation
    "declaration": true,                         // Generates corresponding .d.ts files
    "sourceMap": true,                           // Generates corresponding .map files
    "moduleResolution": "node",                  // Determine how modules get resolved
    "noEmitOnError": true                        // Do not emit outputs if any errors were reported
  },
  "include": ["src/**/*.ts"],                    // Include all TypeScript files in the src directory
  "exclude": ["node_modules", "dist"]            // Exclude node_modules and dist folders from the compilation
}
